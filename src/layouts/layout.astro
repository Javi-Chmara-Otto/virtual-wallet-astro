---
interface Props {
    title: string;
    currentPath?: string;
}

import LogoutModal from "../components/LogoutModal.astro";

const { title, currentPath = "/" } = Astro.props;

// Función auxiliar para determinar si un enlace está activo
const isCurrentPath = (path: string) => currentPath === path;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Virtual Wallet App" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body class="bg-gray-100">
        <div class="flex h-screen">
            <!-- Menú lateral -->
            <aside
                class="w-64 bg-white shadow-lg sticky top-0 h-screen overflow-y-auto"
            >
                <div class="p-4 bg-gradient-to-r from-blue-600 to-purple-600">
                    <h1 class="text-white text-xl font-bold">Mi Billetera</h1>
                </div>

                <nav class="p-4">
                    <ul class="space-y-2">
                        <li>
                            <a
                                href="/"
                                class={`flex items-center gap-3 p-3 rounded-lg transition-colors relative
                                    ${
                                        isCurrentPath("/")
                                            ? "text-purple-600 bg-purple-50 font-medium"
                                            : "text-gray-700 hover:bg-gray-100"
                                    }`}
                            >
                                {
                                    isCurrentPath("/") && (
                                        <span class="absolute left-0 top-0 bottom-0 w-1 bg-purple-600 rounded-full" />
                                    )
                                }
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                                    ></path>
                                </svg>
                                Inicio
                            </a>
                        </li>
                        <li>
                            <a
                                href="/transactions"
                                class={`flex items-center gap-3 p-3 rounded-lg transition-colors relative
                                    ${
                                        isCurrentPath("/transactions")
                                            ? "text-purple-600 bg-purple-50 font-medium"
                                            : "text-gray-700 hover:bg-gray-100"
                                    }`}
                            >
                                {
                                    isCurrentPath("/transactions") && (
                                        <span class="absolute left-0 top-0 bottom-0 w-1 bg-purple-600 rounded-full" />
                                    )
                                }
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                                    ></path>
                                </svg>
                                Transacciones
                            </a>
                        </li>
                        <li>
                            <a
                                href="/statistics"
                                class={`flex items-center gap-3 p-3 rounded-lg transition-colors relative
                                    ${
                                        isCurrentPath("/statistics")
                                            ? "text-purple-600 bg-purple-50 font-medium"
                                            : "text-gray-700 hover:bg-gray-100"
                                    }`}
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                                    ></path>
                                </svg>
                                Estadísticas
                            </a>
                        </li>
                        <li>
                            <a
                                href="/budget"
                                class={`flex items-center gap-3 p-3 rounded-lg transition-colors relative
                                    ${
                                        isCurrentPath("/budget")
                                            ? "text-purple-600 bg-purple-50 font-medium"
                                            : "text-gray-700 hover:bg-gray-100"
                                    }`}
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"
                                    ></path>
                                </svg>
                                Presupuesto
                            </a>
                        </li>
                        <li>
                            <a
                                href="/profile"
                                class={`flex items-center gap-3 p-3 rounded-lg transition-colors relative
                                    ${
                                        isCurrentPath("/profile")
                                            ? "text-purple-600 bg-purple-50 font-medium"
                                            : "text-gray-700 hover:bg-gray-100"
                                    }`}
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                    ></path>
                                </svg>
                                Perfil
                            </a>
                        </li>

                        <!-- Separador -->
                        <div class="my-4 border-t border-gray-200"></div>

                        <li>
                            <a
                                href="/settings"
                                class={`flex items-center gap-3 p-3 rounded-lg transition-colors relative
                                    ${
                                        isCurrentPath("/settings")
                                            ? "text-purple-600 bg-purple-50 font-medium"
                                            : "text-gray-700 hover:bg-gray-100"
                                    }`}
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path>
                                </svg>
                                Configuración
                            </a>
                        </li>
                        <>
                            <button
                                data-logout-button
                                type="button"
                                class="flex items-center gap-3 p-3 text-red-600 rounded-lg hover:bg-red-50 transition-colors w-full"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                                    ></path>
                                </svg>
                                Cerrar Sesión
                            </button>
                        </>
                    </ul>
                </nav>
            </aside>

            <!-- Contenido principal -->
            <main class="flex-1 overflow-y-auto">
                <div class="p-8">
                    <slot />
                </div>
            </main>
        </div>

        <LogoutModal />

        <style is:global>
            :root {
                --accent: 136, 58, 234;
                --accent-light: 224, 204, 250;
                --accent-dark: 49, 10, 101;
                --accent-gradient: linear-gradient(
                    45deg,
                    rgb(var(--accent)),
                    rgb(var(--accent-light)) 30%,
                    white 60%
                );
            }

            html {
                font-family: "Inter", system-ui, sans-serif;
            }
        </style>
    </body>
</html>
